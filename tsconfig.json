{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2015", "es2017", "es2020"],
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "./build"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}